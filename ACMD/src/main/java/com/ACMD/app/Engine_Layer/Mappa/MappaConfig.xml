<!--
  Per inserire un nuovo nodo bisogna specificare i campi obbligatori:
  - <position>...</position>
  - <isRoom>...</isRoom>
  - <path_image>...</path_image>
  Mentre se omessi i tag nord, sud, est, ovest per default sono null
  

  Per inserire una nuova stanza bisogna specificare i campi obbligatori:
  - <mtype></mtype>
  - <positionPlayer>20,20</positionPlayer>
  
  NB: i tag position e positionPlayer hanno formato x,y (es. 1,2 -> cord. x = 1, cord. y = 2)
-->

<mappa>
  <node>
    <position>0,0</position>
    <nord>1,1</nord>
    <sud>2,2</sud>
    <est>3,3</est>
    <ovest>4,4</ovest>
    <isRoom>true</isRoom>
    <path_image>dir1/dir2/file</path_image>
  </node>

  <room>
    <mtype>MOSTRO_MARINO</mtype>
    <positionPlayer>20,20</positionPlayer>
  </room>

</mappa>